<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping
    xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
    https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">
    <entity name="GSoares\Hydroponics\Domain\Entity\TankVersion" table="Tank" repository-class="GSoares\Hydroponics\Domain\Repository\Tank\TankVersionRepository">
        <id name="id" type="integer">
            <generator strategy="AUTO" />
        </id>
        <field name="currentVolume" column="current_volume" type="decimal" />
        <field name="minVolume" column="min_volume" type="decimal" />
        <field name="waterTemperature" column="water_temperature" type="decimal" />
        <field name="maxWaterTemperature" column="max_water_temperature" type="decimal" />
        <field name="minWaterTemperature" column="min_water_temperature" type="decimal" />
        <field name="waterPh" column="water_ph" type="decimal" />
        <field name="maxWaterPh" column="max_water_ph" type="decimal" />
        <field name="minPh" column="min_water_ph" type="decimal" />
        <field name="waterDbo" column="water_dbo" type="decimal" />
        <field name="maxWaterDbo" column="max_water_dbo" type="decimal" />
        <field name="minWaterDbo" column="min_water_dbo" type="decimal" />
        <field name="waterEc" column="water_ec" type="decimal" />
        <field name="maxWaterEc" column="max_water_ec" type="decimal" />
        <field name="minWaterEc" column="min_water_ec" type="decimal" />
        <field name="createdAt" column="created_at" type="datetime" nullable="false"/>
        <field name="updatedAt" column="updated_at" type="datetime" nullable="true"/>
        <field name="deletedAt" column="deleted_at" type="datetime" nullable="true"/>
        <many-to-one field="tank" target-entity="GSoares\Hydroponics\Domain\Entity\Tank" inversed-by="tankVersions">
            <join-column name="tank_id" referenced-column-name="id" nullable="false"/>
        </many-to-one>
    </entity>
</doctrine-mapping>