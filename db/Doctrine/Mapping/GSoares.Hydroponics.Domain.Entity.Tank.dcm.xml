<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping
    xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
    https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">
    <entity name="GSoares\Hydroponics\Domain\Entity\System" table="System" repository-class="GSoares\Hydroponics\Domain\Repository\System\SystemRepository">
        <id name="id" type="integer">
            <generator strategy="AUTO" />
        </id>
        <field name="name" column="name" type="string" length="250"/>
        <field name="description" column="description" type="string" length="1000"/>
        <field name="createdAt" column="created_at" type="datetime" nullable="false"/>
        <field name="updatedAt" column="updated_at" type="datetime" nullable="true"/>
        <field name="deletedAt" column="deleted_at" type="datetime" nullable="true"/>
        <many-to-one field="greenhouse" target-entity="GSoares\Hydroponics\Domain\Entity\Greenhouse" inversed-by="systems">
            <join-column name="greenhouse_id" referenced-column-name="id" nullable="false"/>
        </many-to-one>
    </entity>
</doctrine-mapping>