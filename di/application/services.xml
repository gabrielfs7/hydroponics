<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <!-- Greenhouse -->
        <service id="application.service.resource.abstract_greenhouse_saver" abstract="true" class="GSoares\Hydroponics\Application\Service\Resource\AbstractResourceSaver">
            <argument type="service" id="application.decoder.greenhouse.greenhouse_dto_decoder"/>
            <argument type="service" id="application.encoder.greenhouse.greenhouse_dto_encoder"/>
            <argument type="service" id="domain.factory.greenhouse.greenhouse_factory"/>
            <argument type="service" id="domain.repository.greenhouse.greenhouse_repository"/>
            <argument type="service" id="application.service.greenhouse.greenhouse_attributes_filler"/>
            <argument type="service" id="application.builder.error.error_collection_dto_builder"/>
        </service>

        <service id="application.service.resource.abstract_greenhouse_searcher" abstract="true" class="GSoares\Hydroponics\Application\Service\Resource\AbstractResourceSearcher">
            <argument type="service" id="application.encoder.greenhouse.greenhouse_dto_encoder"/>
            <argument type="service" id="domain.repository.greenhouse.greenhouse_repository"/>
        </service>

        <service id="application.service.greenhouse.greenhouse_deleter" class="GSoares\Hydroponics\Application\Service\Greenhouse\GreenhouseDeleter">
            <argument type="service" id="application.encoder.greenhouse.greenhouse_dto_encoder"/>
            <argument type="service" id="domain.service.greenhouse.greenhouse_deleter"/>
        </service>

        <service id="application.service.greenhouse.greenhouse_creator" parent="application.service.resource.abstract_greenhouse_saver" class="GSoares\Hydroponics\Application\Service\Greenhouse\GreenhouseCreator" />
        <service id="application.service.greenhouse.greenhouse_updater" parent="application.service.resource.abstract_greenhouse_saver" class="GSoares\Hydroponics\Application\Service\Greenhouse\GreenhouseUpdater" />
        <service id="application.service.greenhouse.greenhouse_searcher" parent="application.service.resource.abstract_greenhouse_searcher" class="GSoares\Hydroponics\Application\Service\Greenhouse\GreenhouseSearcher"/>
        <service id="application.service.greenhouse.greenhouse_attributes_filler" class="GSoares\Hydroponics\Application\Service\Greenhouse\GreenhouseAttributesFiller" />

        <!-- Tank -->
        <service id="application.service.resource.abstract_tank_saver" abstract="true" class="GSoares\Hydroponics\Application\Service\Resource\AbstractResourceSaver">
            <argument type="service" id="application.decoder.tank.tank_dto_decoder"/>
            <argument type="service" id="application.encoder.tank.tank_dto_encoder"/>
            <argument type="service" id="domain.factory.tank.tank_factory"/>
            <argument type="service" id="domain.repository.tank.tank_repository"/>
            <argument type="service" id="application.service.tank.tank_attributes_filler"/>
            <argument type="service" id="application.builder.error.error_collection_dto_builder"/>
        </service>

        <service id="application.service.resource.abstract_tank_searcher" abstract="true" class="GSoares\Hydroponics\Application\Service\Resource\AbstractResourceSearcher">
            <argument type="service" id="application.encoder.tank.tank_dto_encoder"/>
            <argument type="service" id="domain.repository.tank.tank_repository"/>
        </service>

        <service id="application.service.tank.tank_deleter" class="GSoares\Hydroponics\Application\Service\Tank\TankDeleter">
            <argument type="service" id="application.encoder.tank.tank_dto_encoder"/>
            <argument type="service" id="domain.service.tank.tank_deleter"/>
        </service>

        <service id="application.service.tank.tank_creator" parent="application.service.resource.abstract_tank_saver" class="GSoares\Hydroponics\Application\Service\Tank\TankCreator" />
        <service id="application.service.tank.tank_updater" parent="application.service.resource.abstract_tank_saver" class="GSoares\Hydroponics\Application\Service\Tank\TankUpdater" />
        <service id="application.service.tank.tank_searcher" parent="application.service.resource.abstract_tank_searcher" class="GSoares\Hydroponics\Application\Service\Tank\TankSearcher"/>
        <service id="application.service.tank.tank_attributes_filler" class="GSoares\Hydroponics\Application\Service\Tank\TankAttributesFiller" />
        
        <!-- System -->
        <service id="application.service.resource.abstract_system_saver" abstract="true" class="GSoares\Hydroponics\Application\Service\Resource\AbstractResourceSaver">
            <argument type="service" id="application.decoder.system.system_dto_decoder"/>
            <argument type="service" id="application.encoder.system.system_dto_encoder"/>
            <argument type="service" id="domain.factory.system.system_factory"/>
            <argument type="service" id="domain.repository.system.system_repository"/>
            <argument type="service" id="application.service.system.system_attributes_filler"/>
            <argument type="service" id="application.builder.error.error_collection_dto_builder"/>
        </service>

        <service id="application.service.resource.abstract_system_searcher" abstract="true" class="GSoares\Hydroponics\Application\Service\Resource\AbstractResourceSearcher">
            <argument type="service" id="application.encoder.system.system_dto_encoder"/>
            <argument type="service" id="domain.repository.system.system_repository"/>
        </service>

        <service id="application.service.system.system_deleter" class="GSoares\Hydroponics\Application\Service\System\SystemDeleter">
            <argument type="service" id="application.encoder.system.system_dto_encoder"/>
            <argument type="service" id="domain.service.system.system_deleter"/>
        </service>

        <service id="application.service.system.system_creator" parent="application.service.resource.abstract_system_saver" class="GSoares\Hydroponics\Application\Service\System\SystemCreator" />
        <service id="application.service.system.system_updater" parent="application.service.resource.abstract_system_saver" class="GSoares\Hydroponics\Application\Service\System\SystemUpdater" />
        <service id="application.service.system.system_searcher" parent="application.service.resource.abstract_system_searcher" class="GSoares\Hydroponics\Application\Service\System\SystemSearcher"/>
        <service id="application.service.system.system_attributes_filler" class="GSoares\Hydroponics\Application\Service\System\SystemAttributesFiller" />

        <!-- Plant -->
        <service id="application.service.resource.abstract_plant_saver" abstract="true" class="GSoares\Hydroponics\Application\Service\Resource\AbstractResourceSaver">
            <argument type="service" id="application.decoder.plant.plant_dto_decoder"/>
            <argument type="service" id="application.encoder.plant.plant_dto_encoder"/>
            <argument type="service" id="domain.factory.plant.plant_factory"/>
            <argument type="service" id="domain.repository.plant.plant_repository"/>
            <argument type="service" id="application.service.plant.plant_attributes_filler"/>
            <argument type="service" id="application.builder.error.error_collection_dto_builder"/>
        </service>

        <service id="application.service.resource.abstract_plant_searcher" abstract="true" class="GSoares\Hydroponics\Application\Service\Resource\AbstractResourceSearcher">
            <argument type="service" id="application.encoder.plant.plant_dto_encoder"/>
            <argument type="service" id="domain.repository.plant.plant_repository"/>
        </service>

        <service id="application.service.plant.plant_deleter" class="GSoares\Hydroponics\Application\Service\Plant\PlantDeleter">
            <argument type="service" id="application.encoder.plant.plant_dto_encoder"/>
            <argument type="service" id="domain.service.plant.plant_deleter"/>
        </service>

        <service id="application.service.plant.plant_creator" parent="application.service.resource.abstract_plant_saver" class="GSoares\Hydroponics\Application\Service\Plant\PlantCreator" />
        <service id="application.service.plant.plant_updater" parent="application.service.resource.abstract_plant_saver" class="GSoares\Hydroponics\Application\Service\Plant\PlantUpdater" />
        <service id="application.service.plant.plant_searcher" parent="application.service.resource.abstract_plant_searcher" class="GSoares\Hydroponics\Application\Service\Plant\PlantSearcher"/>
        <service id="application.service.plant.plant_attributes_filler" class="GSoares\Hydroponics\Application\Service\Plant\PlantAttributesFiller" />
    </services>
</container>