<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="domain.repository.greenhouse.greenhouse_repository" class="GSoares\Hydroponics\Domain\Repository\Greenhouse\GreenhouseRepository">
            <factory service="doctrine.entity_manager" method="getRepository" />
            <argument>GSoares\Hydroponics\Domain\Entity\Greenhouse</argument>
            <call method="setEntityAlias">
                <argument>gh</argument>
            </call>
        </service>

        <service id="domain.repository.system.system_repository" class="GSoares\Hydroponics\Domain\Repository\System\SystemRepository">
            <factory service="doctrine.entity_manager" method="getRepository" />
            <argument>GSoares\Hydroponics\Domain\Entity\System</argument>
            <call method="setEntityAlias">
                <argument>sys</argument>
            </call>
        </service>

        <service id="domain.repository.tank.tank_repository" class="GSoares\Hydroponics\Domain\Repository\Tank\TankRepository">
            <factory service="doctrine.entity_manager" method="getRepository" />
            <argument>GSoares\Hydroponics\Domain\Entity\Tank</argument>
            <call method="setEntityAlias">
                <argument>tnk</argument>
            </call>
        </service>

        <service id="domain.repository.tank.tank_version_repository" class="GSoares\Hydroponics\Domain\Repository\Tank\TankVersionRepository">
            <factory service="doctrine.entity_manager" method="getRepository" />
            <argument>GSoares\Hydroponics\Domain\Entity\TankVersion</argument>
            <call method="setEntityAlias">
                <argument>tkv</argument>
            </call>
        </service>

        <service id="domain.repository.plant.plant_repository" class="GSoares\Hydroponics\Domain\Repository\Plant\PlantRepository">
            <factory service="doctrine.entity_manager" method="getRepository" />
            <argument>GSoares\Hydroponics\Domain\Entity\Plant</argument>
            <call method="setEntityAlias">
                <argument>plt</argument>
            </call>
        </service>

        <service id="domain.repository.crops.crops_repository" class="GSoares\Hydroponics\Domain\Repository\Crops\CropsRepository">
            <factory service="doctrine.entity_manager" method="getRepository" />
            <argument>GSoares\Hydroponics\Domain\Entity\Crops</argument>
            <call method="setEntityAlias">
                <argument>plt</argument>
            </call>
        </service>
    </services>
</container>
